<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_marginleft_10dp"
        android:layout_marginStart="@dimen/item_marginleft_10dp"
        android:textSize="@dimen/tv_item_14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="hello there" />

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginleft_15dp"
        android:layout_marginStart="@dimen/marginleft_15dp"
        android:maxLines="3"
        android:textSize="@dimen/tv_item_12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        tools:text="This is content " />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_ll__height_100dp"
        app:layout_constraintTop_toBottomOf="@id/tvContent">

        <ImageView
            android:id="@+id/imvContent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/imv_margin_5dp"
            android:layout_weight="1"
            android:contentDescription="@string/contentdescription"
            tools:src="@drawable/imgtest" />

        <ImageView
            android:id="@+id/imvContent2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/imv_margin_5dp"
            android:layout_weight="1"
            android:contentDescription="@string/contentdescription"
            tools:src="@drawable/imgtest" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>